<section 
  class="faq-section" 
  dir="{{ section.settings.direction }}"
>
  <div class="faq-container">
    {% if section.settings.heading != blank %}
      <h2 class="faq-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="faq-list">
      {% for block in section.blocks %}
        {% if block.settings.enable_block %}
          <div class="faq-item" {{ block.shopify_attributes }}>
            <button 
              class="faq-question" 
              type="button"
              onclick="this.classList.toggle('active'); this.nextElementSibling.classList.toggle('faq-hidden');"
            >
              <span>{{ block.settings.question }}</span>
              <span class="faq-toggle">+</span>
            </button>
            <div class="faq-answer faq-hidden">
              <p>{{ block.settings.answer }}</p>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Text Direction",
      "options": [
        { "value": "ltr", "label": "Left to Right (English)" },
        { "value": "rtl", "label": "Right to Left (Arabic)" }
      ],
      "default": "ltr"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_block",
          "label": "Show this FAQ",
          "default": true
        },
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Your question here"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Your answer goes here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
