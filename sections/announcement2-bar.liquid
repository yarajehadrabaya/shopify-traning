<div id="announcement-bar">
  {% for block in section.blocks %}
    {% if block.settings.enabled %}
      <div class="announcement" 
           data-start="{{ block.settings.start_time }}" 
           data-end="{{ block.settings.end_time }}">
        <span>{{ block.settings.message }}</span>
        {% if block.settings.button_link != blank and block.settings.button_text != blank %}
          <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
        {% endif %}
      </div>
    {% endif %}
  {% endfor %}
</div>

<style>
#announcement-bar {
  width: 100%;
  background-color: #fffae6;
  color: #333;
  text-align: center;
  padding: 10px 0;
  font-weight: bold;
}

#announcement-bar .announcement {
  display: none;
  justify-content: center;
  align-items: center;
  gap: 10px;
}

#announcement-bar .btn {
  background: #333;
  color: #fff;
  padding: 5px 10px;
  text-decoration: none;
  border-radius: 3px;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const now = new Date();
  document.querySelectorAll('#announcement-bar .announcement').forEach(function(el) {
    const start = new Date(el.dataset.start);
    const end = new Date(el.dataset.end);
    if (now >= start && now <= end) {
      el.style.display = 'flex';
    }
  });
});
</script>

{% schema %}
{
  "name": "Scheduled Bar",
  "settings": [
    {
      "type": "header",
      "content": "Manage your scheduled announcements"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "message",
          "label": "Message"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "text",
          "id": "start_time",
          "label": "Start Time (ISO 8601, e.g., 2025-09-28T17:00)"
        },
        {
          "type": "text",
          "id": "end_time",
          "label": "End Time (ISO 8601, e.g., 2025-09-28T20:00)"
        },
        {
          "type": "checkbox",
          "id": "enabled",
          "label": "Enable announcement",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scheduled Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
