{% schema %}
{
  "name": "Collapsible Size Chart",
  "settings": [
    {
      "type": "image_picker",
      "id": "size_chart_image",
      "label": "Size Chart Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Size Chart"
    }
  ],
  "presets": [
    {
      "name": "Collapsible Size Chart"
    }
  ]
}
{% endschema %}

<style>
  .size-chart-collapsible details {
    border: 1px solid #ddd;
    border-radius: 8px;
    margin: 1rem 0;
    padding: 0.5rem 1rem;
  }
  .size-chart-collapsible summary {
    cursor: pointer;
    font-weight: bold;
    font-size: 1.1rem;
    list-style: none;
  }
  .size-chart-collapsible summary::marker {
    display: none;
  }
  .size-chart-collapsible summary:after {
    content: "➕";
    float: right;
    transition: transform 0.2s;
  }
  .size-chart-collapsible[open] summary:after {
    content: "➖";
  }
  .size-chart-collapsible img {
    max-width: 100%;
    margin-top: 1rem;
    border-radius: 6px;
  }
</style>

<div class="size-chart-collapsible">
  <details>
    <summary>{{ section.settings.title }}</summary>
    {% if section.settings.size_chart_image != blank %}
<img 
  src="{{ section.settings.size_chart_image | image_url: width: 800 }}" 
  alt="Size Chart" 
  width="800" 
  height="auto" 
  loading="lazy" 
/>
jl    {% else %}
      <p>No size chart image added yet.</p>
    {% endif %}
  </details>
</div>
